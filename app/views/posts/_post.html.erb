<article class="post">
  <section class="post-head">
    <h5><%= link_to post.title, post_path(post) %></h5>
      <small>
        <time><%= post.created_at.strftime("%d %B, %Y") %></time>
        |
        <%= link_to t('common.edit'), edit_post_path(post) %>
        |
        <%= link_to t('common.delete'), post_path(post), method: :delete, data: { confirm: t('common.confirmation') } %>
      </small>
  </section>
  <section class="post-summary">
    <%= post.summary %>
  </section>
</article>
